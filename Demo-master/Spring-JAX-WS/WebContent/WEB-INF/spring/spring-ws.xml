<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ws="http://jax-ws.dev.java.net/spring/core" xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
	xsi:schemaLocation=
		"http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://jax-ws.dev.java.net/spring/core
        http://jax-ws.java.net/spring/core.xsd
        http://jax-ws.dev.java.net/spring/servlet
        http://jax-ws.java.net/spring/servlet.xsd">

	<!-- Employee webservice -->
	<wss:binding url="/ws/employeeWebService">
		<wss:service>
			<ws:service bean="#employeeWebService" />
		</wss:service>
	</wss:binding>

	<!-- Web service methods -->
	<bean id="employeeWebService" class="com.linhnguyen.demo.ws.EmployeeWebService">
		<property name="employeeService" ref="employeeServiceImpl" />
	</bean>

	<bean id="employeeServiceImpl" class="com.linhnguyen.demo.ws.impl.EmployeeServiceImpl" />
	
</beans>